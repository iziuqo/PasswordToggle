<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Toggle Example</title>
</head>
<body>
    <form>
        <div>
            <label for="password1">Password:</label>
            <input 
                type="password" 
                id="password1" 
                data-pw-toggle 
                aria-label="Password field"
            >
        </div>
        
        <div>
            <label for="password2">Another Password:</label>
            <input 
                type="password" 
                id="password2" 
                data-pw-toggle 
                aria-label="Another password field"
            >
        </div>
    </form>

    <script src="password-toggle.js"></script>
    <script>
        // Basic usage
        const passwordToggle = new PasswordToggle();

        // Custom configuration
        const customPasswordToggle = new PasswordToggle({
            keyCombo: 'alt+p',
            toggleAttribute: 'data-custom-toggle'
        });

        // Listen for toggle events
        document.querySelector('#password1').addEventListener('passwordToggle', (e) => {
            console.log('Password visibility changed:', e.detail.isVisible);
        });
    </script>
</body>
</html>
